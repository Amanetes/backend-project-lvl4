extends ../layouts/application.pug

block content
	.row.justify-content-center
		.card.shadow-sm.bg-light.bg-gradient.rounded-3
			.card-body.row.p-4
			.col-12.col-md-6.d-flex.align-items-center
			.form-signin.text-center
				i.bi.bi-bookmarks(style='font-size: 3rem; color: DodgerBlue;')
				h1.h3.mb-3.fw-bold= t('views.statuses.new.title')
				+formFor()(action=route('statuses#create') method='post')
					+input(taskStatus, 'name', t('views.placeholders.name'), errors)(type='text')
					+submit(taskStatus)(value=t('views.statuses.new.submit'))
					p.my-3.text-muted &copy; 2022 Hexlet Ltd.