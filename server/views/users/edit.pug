extends ../layouts/application.pug

block content
	.row.justify-content-center
		.card.shadow-sm.bg-light.bg-gradient.rounded-3
			.card-body.row.p-4
			.col-12.col-md-6.d-flex.align-items-center
			.form-signin.text-center
				i.bi.bi-person-lines-fill(style='font-size: 3rem; color: DodgerBlue;')
				h1.h3.mb-3.fw-bold= t('views.users.update.title')
				+formFor()(action=route('users#update', { id: user.id }) method='post')
					+input(user, 'email', t('views.placeholders.email'),  errors)(type='text')
					+input(user, 'password', t('views.placeholders.password'), errors)(type='password')
					+input(user, 'firstName', t('views.placeholders.firstName'), errors)(type='text')
					+input(user, 'lastName', t('views.placeholders.lastName'), errors)(type='text')
					input(name="_method" type="hidden" value='patch')
					+submit(user)(value=t('views.users.update.submit'))
					p.my-3.text-muted &copy; 2022 Hexlet Ltd.